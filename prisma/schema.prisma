generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id            Int @id @default(autoincrement())
  title         String
  content       String
  type          String


  lockedAt       DateTime?
  lastFinishedAt DateTime?
  lastRunAt      DateTime?
  repeatInterval String

  schedule      String 
  priority      Int    
  nextRunAt     DateTime?
  repeatAt      String?
  interval      Int?

  createdAt     DateTime @default(now())
}
